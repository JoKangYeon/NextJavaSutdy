<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ScrollPane?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lottoshop.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="0.0" prefWidth="200.0">
       <!-- 구매할 로또의 수량 입력 받음 -->
      <children>
         <TextField fx:id="inputCount" prefWidth="150"/>
          <!-- TextField에 적힌 수량만큼 로또 번호를 생성해서 화면에 출력 -->
         <Button mnemonicParsing="false" onAction="#onBuy" text="Buy" prefWidth="50" />
      </children>
   </HBox>
    <ScrollPane prefHeight="200" fitToWidth="true">
        <VBox fx:id="lottoBox" prefWidth="200.0" />
    </ScrollPane>
</VBox>
